{
  /* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
  
  "rules": {
    ".read": false,
    ".write": false,
    
    // Permite a los usuarios autenticados leer datos generales
    "public_data": {
      ".read": "auth != null",
      ".write": "false"
    },
    
    // Datos de usuario individual
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    
    // Datos de cursos
    "courses": {
      ".read": "auth != null",
      ".write": "auth != null",
      
      // Limita la escritura de un curso al creador o a los administradores
      "$courseId": {
        ".write": "data.child('creator').val() === auth.uid || root.child('admins/' + auth.uid).exists()"
      }
    },
    
    // Datos de las tareas de los cursos
    "course_tasks": {
      ".read": "auth != null",
      ".write": "auth != null",
      
      // Limita la escritura de tareas al creador del curso
      "$courseId": {
        "$taskId": {
          ".write": "root.child('courses/' + $courseId + '/creator').val() === auth.uid"
        }
      }
    },
    
    // Datos de los usuarios administradores
    "admins": {
      ".read": "auth != null && root.child('admins/' + auth.uid).exists()",
      ".write": "auth != null && root.child('admins/' + auth.uid).exists()"
    }
  }
}
